page {
    background: #eee;
}
.inner-wrapper {
    width: 100%;
}
.slide-image {
    width: 100%;
    height: 750rpx;
}
.playing {
    height: 750rpx;
}
/* info */
.info {
    font-size: 28rpx;    
    color: #999;
    line-height: 1.5em;
    padding: 20rpx;
    background: #fff;
    border-bottom: solid 1px #d5d5d5;
}
.info .title {
    color: #333;
}
/* desc */
.desc {
    margin-top: 30rpx;
    background: #fff;
    border-top: solid 1px #d5d5d5;
}
.desc .title {
    padding: 20rpx;
    border-bottom: solid 1px #d5d5d5;
}
.desc .title text {
    border-left: solid 2px #ff8213;
    padding: 6rpx 20rpx;
    font-size: 32rpx;
}
.desc .desc-img {
    width: 750rpx;
    height: 2186rpx;
}