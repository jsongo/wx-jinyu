@import "../../wxss/base.wxss";

page {
    background: #eee;
}
.product {
    margin: 20rpx 0;
}
.product .pic {
    width: 100%;
    display: block;
    height: 264rpx;
}
.product .info {
    background: #fff;
    font-size: 28rpx;
    padding: 20rpx 16rpx;
    line-height: 1.25em;
    overflow: hidden;
}
.product .info .name {
    color: #585858;
    float: left;
}
.product .info .desc {
    color: #999;
    float: right;
}